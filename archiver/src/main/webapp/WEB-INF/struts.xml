<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <constant name="struts.objectFactory" value="spring"/>
    <package name="default" extends="struts-default" namespace="/">
    <global-results>
    <result name="error">/error.jsp</result>
  	</global-results>
    <action name="listboard" class="org.kbs.archiver.action.ListBoard" method="execute">  
            <result name="success">/boards.jsp</result>  
    </action>  
    <action name="listthread" class="org.kbs.archiver.action.ListThread" method="execute">  
            <result name="success">/board.jsp</result>  
    </action>  
    <action name="listarticle" class="org.kbs.archiver.action.ListArticle" method="getByThread">  
            <result name="success">/thread.jsp</result>  
    </action>  
    <action name="listarticlebyauthor" class="org.kbs.archiver.action.ListArticle" method="getByAuthor">  
            <result name="success">/authorartile.jsp</result>  
    </action>  
    </package>
</struts>