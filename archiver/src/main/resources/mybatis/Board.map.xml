<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="org.kbs.archiver.Board">
    <select id="countAll" resultType="int">
        select count(*)  from board;
    </select>
    
    <select id="selectOne" resultType="org.kbs.archiver.Board">
        select * from board where boardid=#{boardid}
    </select>
    
    <select id="selectAll" resultType="org.kbs.archiver.Board">
        select * from board order by boardid asc
    </select>
    
    <insert id="insert" parameterType="org.kbs.archiver.Board">
        insert into board(boardid,threads,articles,ishidden,name) values(#{boardid},#{threads},#{articles},#{ishidden},#{name})
    </insert>
    
    <update id="update" parameterType="org.kbs.archiver.Board">
        update board name=#{name} threads=#{threads},articles=#{articles},ishidden=#{ishidden} where boardid=#{boardid}
    </update>
    
    <delete id="delete" parameterType="int">
        delete from board where boardid=#{boardid}
    </delete>
    
    <delete id="deleteByName" parameterType="String">
        delete from board where name=#{name}
    </delete>

    <select id="findByName" parameterType="String" resultType="org.kbs.archiver.Board">
        select * from board where name=#{name}
    </select>
</mapper>