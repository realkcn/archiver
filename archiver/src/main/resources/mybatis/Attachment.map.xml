    <select id="countAll" resultType="int">
        select count(*)  from attachment;
    </select>
    
    <select id="selectAll" resultType="org.kbs.archiver.AttachmentEntity">
        select name,attachmentid,encodingurl,boardid,articleid from attachment order by attachmentid asc
    </select>
    
    <insert id="insert" parameterType="org.kbs.archiver.AttachmentEntity">
        insert into attachment(name,attachmentid,articleid,attachmentorder,data,encodingurl,boardid) 
        	values (#{name},#{attachmentid},#{articleid},#{order},#{data},#{encodingurl},#{boardid})
         ON DUPLICATE KEY UPDATE name=#{name},articleid=#{articleid},attachmentorder=#{order},encodingurl=#{encodingurl}, data=#{data} ,boardid=#{boardid}
    </insert>
    
    <update id="update" parameterType="org.kbs.archiver.AttachmentEntity">
        update attachment set name=#{name},articleid=#{articleid},attachmentorder=#{order},encodingurl=#{encodingurl} ,
          data=#{data},boardid=#{boardid}
          where attachmentid=#{attachmentid}
    </update>

    <delete id="delete" parameterType="long">
        delete from attachment where attachmentid=#{attachmentid}
    </delete>
    <delete id="deleteByBoard" parameterType="long">
        delete from attachment where boardid=#{boardid}
    </delete>
    <select id="get" parameterType="long" resultType="org.kbs.archiver.AttachmentEntity">
        select * from attachment where attachmentid=#{attachmentid}
    </select>
     <select id="getByArticle" parameterType="long" resultType="org.kbs.archiver.AttachmentEntity">
        select name,attachmentid,encodingurl,boardid from attachment where articleid=#{articleid} order by attachmentorder asc
    </select>
    <cache eviction="FIFO" flushInterval="3600000" size="1024" readOnly="true" />
</mapper>